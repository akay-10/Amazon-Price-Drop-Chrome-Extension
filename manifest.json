{
    "manifest_version": 2,
    "version": "1.0",
    "name": "Amazon Price Drop",
    "description": "Notifies you when price of an item drops",
    "content_scripts": [
        {
            "matches": [
                "http://amazon.com/*",
                "https://amazon.com/*",
                "http://*.amazon.com/*",
                "https://*.amazon.com/*",
                "http://amazon.in/*",
                "https://amazon.in/*",
                "http://*.amazon.in/*",
                "https://*.amazon.in/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Amazon Price Drop",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}